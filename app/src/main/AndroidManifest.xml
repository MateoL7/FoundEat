<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foundeat">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- Permisos peligrosos -->
    <!-- Sí necesitan pedirse al usuario, y también se declaran -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoundEat">
        <activity
            android:name=".ui.RestaurantMoreInfo"
            android:exported="true" />
        <activity
            android:name=".ui.ClientHome"
            android:exported="true" />
        <activity
            android:name=".ui.RestaurantHome"
            android:exported="true" />
        <activity
            android:name=".ui.login"
            android:exported="true" />
        <activity
            android:name=".ui.ClientRegister"
            android:exported="true" />
        <activity
            android:name=".ui.RestaurantScreen"
            android:exported="true" />
        <activity
            android:name=".ui.ClientScreen"
            android:exported="true" />
        <activity
            android:name=".ui.RestaurantRegister"
            android:exported="true" />
        <activity
            android:name=".ui.UserRegister"
            android:exported="true" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
    </application>

</manifest>