<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoundEat" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyDialog" parent="@android:style/Theme.Dialog"> <item name="android:windowFrame">@null</item> <item name="android:windowBackground">@color/background</item> <item name="android:windowIsFloating">false</item> <item name="android:windowContentOverlay">@null</item> <item name="android:windowTitleStyle">@null</item> <item name="android:colorBackgroundCacheHint">@null</item> <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item> <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item> <item name="android:gravity">center</item></style>
    <style name="Theme.FoundEat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.FoundEat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FoundEat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Button Style -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradientbutton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/dmsansbold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <!-- Button goBack Style -->
    <style name="btnBack" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/arrow_back_ios_24px</item>
    </style>

    <!-- Button Camara Style -->
    <style name="camara">
        <item name="android:background">@drawable/icon_camara</item>
    </style>

    <!-- Button ET Style -->
    <style name="styleET" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/textfieldborder</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:fontFamily">@font/dmsansregular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!--__________________ TEXTS __________________________-->

    <!-- titles style -->
    <style name="titleRestaurant" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/dmsansbold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- titles regular style -->
    <style name="titleRegular" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">23sp</item>
        <item name="android:fontFamily">@font/dmsansregular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- subtitles style -->
    <style name="subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/dmsansbold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- omitir style -->
    <style name="subregular" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/dmsansregular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- imagen bg -->
    <style name="imgCliente">
        <item name="android:background">@drawable/img_person</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- logo style-->
    <style name="logoStyle">
        <item name="android:background">@drawable/logofoundeat</item>
    </style>


</resources>