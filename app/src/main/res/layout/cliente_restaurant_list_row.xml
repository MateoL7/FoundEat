<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/restaurantListImage"
        android:layout_width="94dp"
        android:layout_height="118dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/restaurantListNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Nombre"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toEndOf="@+id/restaurantListImage"
        app:layout_constraintTop_toTopOf="@+id/restaurantListImage" />

    <TextView
        android:id="@+id/restaurantListCalificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="Calificacion"
        app:layout_constraintStart_toEndOf="@+id/restaurantListImage"
        app:layout_constraintTop_toBottomOf="@+id/restaurantListNombre" />

    <TextView
        android:id="@+id/restaurantListTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="Tipo de comida"
        app:layout_constraintStart_toEndOf="@+id/restaurantListImage"
        app:layout_constraintTop_toBottomOf="@+id/restaurantListCalificacion" />

    <TextView
        android:id="@+id/restaurantListResenas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:text="ReseÃ±as"
        app:layout_constraintStart_toEndOf="@+id/restaurantListImage"
        app:layout_constraintTop_toBottomOf="@+id/restaurantListTipo" />
</androidx.constraintlayout.widget.ConstraintLayout>