<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#97CAC0">

    <ImageView
        android:id="@+id/menuItemRowIV"
        android:layout_width="92dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/menuItemRowNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="name"
        app:layout_constraintStart_toEndOf="@+id/menuItemRowIV"
        tools:layout_editor_absoluteY="23dp" />

    <TextView
        android:id="@+id/menuItemRowPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="price"
        app:layout_constraintEnd_toEndOf="@+id/menuItemRowNameTV"
        app:layout_constraintStart_toStartOf="@+id/menuItemRowNameTV"
        app:layout_constraintTop_toBottomOf="@+id/menuItemRowNameTV" />

    <TextView
        android:id="@+id/menuItemRowDescTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="description"
        app:layout_constraintEnd_toEndOf="@+id/menuItemRowPriceTV"
        app:layout_constraintStart_toStartOf="@+id/menuItemRowPriceTV"
        app:layout_constraintTop_toBottomOf="@+id/menuItemRowPriceTV" />

    <ImageButton
        android:id="@+id/editMenuItemRowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>